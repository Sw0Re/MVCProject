@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string status = "";}
@{ string statusButton = "";}

<div>
    <div class="row gx-5">
        <div class="col" style="margin-top:15px; margin-bottom:5px;">
            <h2>Hakkımızda Veri Listesi </h2>
        </div>
        <div class="col-7" style="margin-top:15px; margin-bottom:5px; margin-right:15px;">
            <br />
            <br />
            @Html.Action("AboutPartial", "About")
            <br />
            <br />
        </div>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda</th>
        <th>Hakkımda Detayı</th>
        <th>Görsel-1</th>
        <th>Görsel-2</th>
        <th>Aktif veya Pasif İşlemi</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.AboutStatus == true)
        {
            status = "Pasif Yap";
        }
        if (item.AboutStatus == false)
        {
            status = "Aktif Yap";
        }
        if (item.AboutStatus == true)
        {
            statusButton = "btn btn-danger";
        }
        if (item.AboutStatus == false)
        {
            statusButton = "btn btn-warning";
        }
<tr>
    <th>@item.AboutID</th>
    <th>@item.AboutDetails1</th>
    <td>@item.AboutDetails2</td>
    <td>
        <a href="@item.AboutImage1" data-toggle="lightbox">
            <img src="@item.AboutImage1" class="img-circle elevation-2" alt="User Image" width="50" />

        </a>

    </td>
    <td>
        <a href="@item.AboutImage2" data-toggle="lightbox">
            <img src="@item.AboutImage2" class="img-circle elevation-2" alt="User Image" width="50" />

        </a>

    </td>
    <td><a href="/About/DeleteAbout/@item.AboutID" class="@statusButton">@status</a></td>
</tr>
    }
</table>


